<Window x:Class="calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calc" 
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="270">
    <Grid>
        <Grid.Resources>
            <local:ViewModel x:Key="vm"/>
            <Style TargetType="Button" x:Key="namber">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Command" Value="{Binding NamberCommand ,Source={StaticResource vm}}"/>
                <Setter Property="CommandParameter" Value="{Binding Content,RelativeSource={RelativeSource self}}"/>
            </Style>
            <Style TargetType="Button" x:Key="operation">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Command" Value="{Binding OperationCommand ,Source={StaticResource vm}}"/>
                <Setter Property="CommandParameter" Value="{Binding Content,RelativeSource={RelativeSource self}}"/>

            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.25*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="4">
            <Label Content="{Binding Rezult ,Source={StaticResource vm}}"/>
            <Label Content="{Binding Operator1, Source={StaticResource vm}}"/>
            <Label Content="{Binding Operation, Source={StaticResource vm}}"/>
            <Label Content="{Binding Operator2, Source={StaticResource vm}}"/>
            
        </StackPanel>

        <Button Grid.Row="1" Grid.Column="0" Content=""/>
        <Button Grid.Row="1" Grid.Column="1" Content=""/>
        <Button Grid.Row="1" Grid.Column="2" Content=""/>
        <Button Grid.Row="1" Grid.Column="3" Content="C" Command="{Binding ClearCommand, Source={StaticResource vm}}"/>

        <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource namber}"/>
        <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource namber}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource namber}"/>
        <Button Grid.Row="2" Grid.Column="3" Content="+" Style="{StaticResource operation}"/>

        <Button Grid.Row="3" Grid.Column="0" Content="4" Style="{StaticResource namber}"/>
        <Button Grid.Row="3" Grid.Column="1" Content="5" Style="{StaticResource namber}"/>
        <Button Grid.Row="3" Grid.Column="2" Content="6" Style="{StaticResource namber}"/>
        <Button Grid.Row="3" Grid.Column="3" Content="-" Style="{StaticResource operation}"/>

        <Button Grid.Row="4" Grid.Column="0" Content="1" Style="{StaticResource namber}"/>
        <Button Grid.Row="4" Grid.Column="1" Content="2" Style="{StaticResource namber}"/>
        <Button Grid.Row="4" Grid.Column="2" Content="3" Style="{StaticResource namber}"/>
        <Button Grid.Row="4" Grid.Column="3" Content="*" Style="{StaticResource operation}"/>

        <Button Grid.Row="5" Grid.Column="0" Content=""/>
        <Button Grid.Row="5" Grid.Column="1" Content="0" Style="{StaticResource namber}"/>
        <Button Grid.Row="5" Grid.Column="2" Content="."/>
        <Button Grid.Row="5" Grid.Column="3" Content="/" Style="{StaticResource operation}"/>




    </Grid>
</Window>
